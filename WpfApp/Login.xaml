<Window x:Class="WpfApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Dedlandar" Height="450" Width="800">
    <Grid>
        <StackPanel>
        <Label Content="Введите логин: " HorizontalAlignment="Center" Margin="5,5,5,5" />
        <TextBox x:Name="login" HorizontalAlignment="Center" Height="24" Width="150" Margin="5,5,5,5" />
        <Label Content="Введите пароль: " HorizontalAlignment="Center" Margin="5,5,5,5" />
        <PasswordBox x:Name="password" HorizontalAlignment="Center" Height="24" Width="150" Margin="5,5,5,5" />
        <Button x:Name="regin" Click="Registration_Click" Content="Регистрация" HorizontalAlignment="Center" Margin="5,5,5,5" />
        <Button x:Name="enter" Click="Enter_Click" Content="Войти" HorizontalAlignment="Center" Margin="5,5,5,5" RenderTransformOrigin="-1.883,0.332" />
        </StackPanel>
    </Grid>
</Window>