<Window x:Class="WpfApp.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Dedlandar" Height="450" Width="800">
    <Grid>
        <Label Content="Введите имя: " HorizontalAlignment="Center" Margin="300,90,300,300" />
        <TextBox x:Name="name" HorizontalAlignment="Center" Height="24" Width="150" Margin="300,110,300,270"/>
        <Label Content="Введите фамилию: " HorizontalAlignment="Center" Margin="300,150,300,240" />
        <TextBox x:Name="surname" HorizontalAlignment="Center" Height="24" Width="150" Margin="300,180,300,230"/>
        <TextBox x:Name="login" HorizontalAlignment="Center" Height="24" Width="150" Margin="300,220,300,270"/>
        <TextBox x:Name="password" HorizontalAlignment="Center" Height="24" Width="150" Margin="300,260,300,200"/>
        <Button x:Name="regin" Click="Registration_Click" Content="Регистрация" HorizontalAlignment="Center" Margin="300,300,300,92" />
    </Grid>
</Window>